<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hackberry">

    <ImageView
        android:id="@+id/imgHackberry"
        android:layout_width="408dp"
        android:layout_height="416dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="66dp"
        android:contentDescription="@string/hackberry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hackberry" />

    <TextView
        android:id="@+id/txtHackberry"
        android:layout_width="414dp"
        android:layout_height="59dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/txtHackberry"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgHackberry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>